{
    "compilerOptions": {
        "strict": true,
        "target": "es2020",
        "module": "ESNext",
        "moduleResolution": "Node16",
        // "allowSyntheticDefaultImports": true,
        "declaration": true,
        "importHelpers": true,
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "lib": ["es2020", "dom"],
        "stripInternal": true,
        "skipLibCheck": true,
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true
    },
    "include": ["src"],
    "exclude": ["./src/tests/"]
}
